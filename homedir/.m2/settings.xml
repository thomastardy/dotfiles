<?xml version="1.0" encoding="UTF-8"?>

<settings xmlns="http://maven.apache.org/settings/1.0.0"
		  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		  xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.0.0 http://maven.apache.org/xsd/settings-1.0.0.xsd">

	<!-- true if Maven should attempt to interact with the user for input, false if not. Defaults to true -->
	<interactiveMode>true</interactiveMode>

	<!-- true if this build system should operate in offline mode, defaults to false -->
	<offline>false</offline>

	<!-- User authentication for mp snapshots/releases repos -->
	<servers>
		<server>
			<id>mp-snapshots</id>
			<username>deployment</username>
			<password><!-- KeePass: Cloud Nexus Deployment User --></password>
		</server>
		<server>
			<id>mp-releases-ephemeral</id>
			<username>deployment</username>
			<password><!-- KeePass: Cloud Nexus Deployment User --></password>
		</server>
		<server>
			<id>mp-releases-persistent</id>
			<username>deployment</username>
			<password><!-- KeePass: Cloud Nexus Deployment User --></password>
		</server>
	</servers>

	<mirrors>
		<mirror>
			<!-- Use mirror -->
			<id>nexus</id>
			<mirrorOf>*</mirrorOf>
			<url>https://artifacts2.mptechnology.ch/repository/maven-public/</url>
		</mirror>
	</mirrors>

	<profiles>
		<profile>
			<id>nexus</id>
			<!-- Plugin Repositories -->
			<pluginRepositories>
				<pluginRepository>
					<id>nexus.plugins.releases</id>
					<url>https://artifacts2.mptechnology.ch/repository/maven-public/</url>
					<releases>
						<enabled>true</enabled>
						<updatePolicy>always</updatePolicy>
						<checksumPolicy>warn</checksumPolicy>
					</releases>
					<snapshots>
						<enabled>false</enabled>
					</snapshots>
				</pluginRepository>
			</pluginRepositories>
		</profile>

		<profile>
			<id>nexus.plugin.snapshots</id>
			<!-- Plugin Repositories -->
			<pluginRepositories>
				<pluginRepository>
					<id>nexus.plugins.snapshots</id>
					<url>https://artifacts2.mptechnology.ch/repository/maven-public/</url>
					<releases>
						<enabled>false</enabled>
					</releases>
					<snapshots>
						<enabled>true</enabled>
						<!-- Can be "never", "always", "daily" or "interval:XXX" (in minutes) -->
						<!-- avoid uncontrolled snapshot-updates -->
						<updatePolicy>never</updatePolicy>
						<!-- Options are: "ignore", "fail", or "warn" -->
						<checksumPolicy>warn</checksumPolicy>
					</snapshots>
				</pluginRepository>
			</pluginRepositories>
		</profile>

	</profiles>

	<activeProfiles>
		<!--make the profile active all the time -->
		<activeProfile>nexus</activeProfile>
	</activeProfiles>

</settings>
